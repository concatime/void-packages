# Template file for 'wangle'
pkgname=wangle
version=2020.11.23.00
revision=1
wrksrc="${pkgname}-${version}/${pkgname}"
build_style=cmake
configure_args="-D BUILD_SHARED_LIBS=ON -D BUILD_STATIC_LIBS=ON
 -D BUILD_TESTS=ON"
makedepends="double-conversion-devel fizz-devel fmt-devel folly-devel
 gflags-devel glog-devel libevent-devel libressl-devel"
checkdepends="gtest-devel"
short_desc="C++ networking library"
maintainer="Issam E. Maghni <issam.e.maghni@mailbox.org>"
license="Apache-2.0"
homepage="https://github.com/facebook/wangle"
distfiles="https://github.com/facebook/wangle/archive/v${version}.tar.gz"
checksum=b92d7ca7299fafa015dcbff21e79b2636a7f05c4250c3a6f3bbdf583af56ec95

wangle-devel_package() {
	short_desc+=" - development files"
	depends="${sourcepkg}>=${version}_${revision}"
	pkg_install() {
		vmove usr/include
		vmove "usr/lib/*.a"
		vmove "usr/lib/*.so"
		vmove usr/lib/cmake
		vmove usr/lib/pkgconfig
	}
}
